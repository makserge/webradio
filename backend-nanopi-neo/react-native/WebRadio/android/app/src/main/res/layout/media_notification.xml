<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/notificationbg"
    android:layout_width="match_parent"
    android:layout_height="128.0dip"
    android:paddingStart="@dimen/status_bar_button_info_container_padding_left"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/shuffle_button"
        android:background="?android:selectableItemBackground"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_controls_notification"
        android:src="@drawable/shuffle"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/album_art" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:layout_toEndOf="@id/shuffle_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:showDividers="middle"
        android:dividerPadding="12.0dip">
        <ImageButton
            android:id="@+id/prev_button"
            android:background="?android:selectableItemBackground"
            android:padding="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/skip_previous"
            android:scaleType="fitCenter"
            android:layout_weight="1.0" />
        <ImageButton
            android:id="@+id/play_button"
            android:background="?android:selectableItemBackground"
            android:padding="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/pause"
            android:scaleType="fitCenter"
            android:layout_weight="1.0" />
        <ImageButton
            android:id="@+id/next_button"
            android:background="?android:selectableItemBackground"
            android:padding="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/skip_next"
            android:scaleType="fitCenter"
            android:layout_weight="1.0" />
    </LinearLayout>
    <ImageView
        android:background="?android:dividerHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="1.0px"
        android:layout_toEndOf="@id/album_art"
        android:layout_above="@+id/buttons"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/notification_padding"
        android:paddingEnd="@dimen/notification_padding"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/album_art"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_track_name"
            android:focusable="true"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_artist_name"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_album_name"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />
    </LinearLayout>
</RelativeLayout>